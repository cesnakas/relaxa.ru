#topProduct-4 .product {
    min-height: 460px !important;
}
#topProduct-4{
	position: relative;
}

#topProduct-4 .wrap{
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	overflow: hidden;
}

#topProduct-4 .productList{
	position: relative;
	list-style: none;
	overflow: hidden;
	clear: both;
	margin: 0px;
	left: 0px;
}

#topProduct-4 .productList > li{
	float: left;
}

#topProduct-4 .productList .item{
	border-left: 0px !important;
	height: 460px !important;
	width: 100% !important;
	float: none;
}

#topProduct-4 .productList > li:first-child .item{
	border-left: 1px solid #e7e8ea !important;
}

#topProduct-4 .productList .item .tabloid{
	height: 458px !important;
}

#topProduct-4 .topBtnLeft-4{
	background: url(/img/slider_prev.png) 0 0 no-repeat transparent;
	transform: translateY(-50%);
	position: absolute;
	height: 70px;
	width: 35px;
	z-index: 22;
	top: 50%;
}
#topProduct-4 .topBtnRight-4{
	background: url(/img/slider_next.png) 0 0 no-repeat transparent;
	transform: translateY(-50%);
	position: absolute;
	height: 70px;
	width: 35px;
	z-index: 22;
	top: 50%;
}

#topProduct-4 .topBtnLeft-4{
	left: 15px;
}

#topProduct-4 .topBtnRight-4{
	right: 0px;
}
